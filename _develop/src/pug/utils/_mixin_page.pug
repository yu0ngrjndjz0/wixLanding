mixin mv(data)
  .l-mv
    .l-mv__mask
    .row.row--sm
      .row-bg
      .row-ctn
        h2.l-mv__ttl
          span.en!= data.title.en
          span.jp(class = data.title.flag ? "jp--" + data.title.flag : "")!= data.title.jp
        +breadcrumb(data.breadcrumb)